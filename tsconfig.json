{
	"compilerOptions": {
		"target": "ES2017",
		"module": "commonjs",
		"lib": ["ES6", "DOM"],
		"rootDir": "./src",
		"outDir": "./dist",
		"allowJs": true,
		"declaration": true,
		"sourceMap": true,
		"removeComments": true,
		"typeRoots": ["./node_modules/@types", "./src/@types"],
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true
	}
}
